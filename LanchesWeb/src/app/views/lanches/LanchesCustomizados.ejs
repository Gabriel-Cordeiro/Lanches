<!DOCTYPE HTML>
<html lang="pt-br">

<head>
	<meta charset="UTF-8">

	<title>Lanches startup</title>

	<!-- JQuery -->
	<script src="js/jquery-2.2.1.js"></script>

	<!-- bootstrap - link cdn -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7"
	 crossorigin="anonymous">

	<!-- incluindo css -->
	<link href="css/style.css" rel="stylesheet">

	<!-- favicon -->
	<link rel="shortcut icon" href="images/burguerico.png" />
</head>

<body>
	<nav class="navbar navbar-default navbar-static-top">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false"
				 aria-controls="navbar">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>

				<img src="images/Burguers.png" />
			</div>

			<div id="navbar" class="navbar-collapse collapse">
				<ul class="nav navbar-nav navbar-right">
					<li>
						<a href="/">Inicio</a>
					</li>
				</ul>
			</div>
		</div>
	</nav>
	<div class="container">
		<form action="/calcularCustomizado" method="POST" name ='formteste' >
			<table class="table">
				<thead>
					<tr>
						<th scope="col">Código</th>
						<th scope="col">Ingrediente</th>
						<th scope="col">Preço unitário R$</th>
						<th scope="col">Quantidade</th>
					</tr>
				</thead>
				<tbody>
					<%if(arrayIngredientes.length > 0){%>
						<%for (var i=0; i < arrayIngredientes.length; i++ ) {%>
							<tr>
								<td>
									<%=arrayIngredientes[i].codigoIngrediente%>
								</td>
								<td>
									<%=arrayIngredientes[i].nomeIngrediente%>
								</td>
								<td>
									<%=arrayIngredientes[i].valorIngrediente%>
								</td>
								<td>
									<input type="number" name="<%=arrayIngredientes[i].nomeIngrediente%>" min="0" max="99" value="0">
								</td>
							</tr>
							<%}%>
								<%}%>
				</tbody>
			</table>
			<button type="submit" class="btnCalcular btn btn-success" id="btnTeste">Calcular</button>
		</form>

	</div>

	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS"
	 crossorigin="anonymous"></script>

</body>

</html>